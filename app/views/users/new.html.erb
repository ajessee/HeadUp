<!-- User Signup Section -->
<section id="user_signup">
    <div class="container wow fadeIn">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Sign up</h2>
                <hr class="colored">
                <p>Sign up to create a user for the Head Up website</p>
            </div>
        </div>
        <div class="row content-row">
            <div class="col-lg-8 col-lg-offset-2">
                <%= form_for(@user, html: {name: "user_signup", id: "userSignupForm", :novalidate => ""}) do |f| %>
                <!-- <form name="user_signup" id="userSignupForm" novalidate> -->
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <%= f.label :name %>
                            <%= f.text_field :name, class: "form-control", placeholder: "Name", id: "name", :required => "", "data-validation-required-message" => "Please enter your name." %>
                           <!--  <label>Name</label>
                            <input type="text" class="form-control" placeholder="Name" id="name" required data-validation-required-message="Please enter your name."> -->
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <%= f.label :email %>
                            <%= f.text_field :email, class: "form-control", placeholder: "Email Address", id: "email", :required => "", "data-validation-required-message" => "Please enter your email address." %>
             <!--                <label>Email Address</label>
                            <input type="email" class="form-control" placeholder="Email Address" id="email" required data-validation-required-message="Please enter your email address."> -->
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <%= f.label :password %>
                            <%= f.text_field :password, class: "form-control", placeholder: "Enter Password", id: "password", :required => "", "data-validation-required-message" => "Please enter your password" %>
                       <!--      <label>Phone Number</label>
                            <input type="tel" class="form-control" placeholder="Phone Number" id="phone" required data-validation-required-message="Please enter your phone number."> -->
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <%= f.label :password_confirmation, "Confirmation" %>
                            <%= f.text_field :password_confirmation, class: "form-control", placeholder: "Please confirm password", id: "password_confirmation", :required => "", "data-validation-required-message" => "Please confirm your password" %>
                   <!--          <label>Message</label>
                            <textarea rows="5" class="form-control" placeholder="Message" id="message" required data-validation-required-message="Please enter a message."></textarea> -->
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <br>
                    <div id="success"></div>
                    <div class="row">
                        <div class="form-group col-xs-12">
                             <%= f.submit "Create my account", class: "btn btn-outline-dark" %>
<!--                             <button type="submit" class="btn btn-outline-dark">Send</button>
 -->                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</section>